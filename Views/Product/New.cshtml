@model E_Commerce.Models.Product
<div class="container mx-auto mt-5">
    <h4><u>Add a new product</u></h4>
    <form class="form-group my-4" asp-controller="Product" asp-action="AddProduct" method="post">
        <div class="container">
            <span class="text-danger mt-2" asp-validation-for="Name"></span>
            <input class="form-control mt-2" type="text" asp-for="Name" placeholder="Name">
            <span class="text-danger mt-2" asp-validation-for="Img"></span>
            <input class="form-control mt-2" type="text" asp-for="Img" placeholder="Image url">
            <span class="text-danger mt-2" asp-validation-for="Description"></span>
            <textarea class="form-control mt-2" type="text" asp-for="Description" placeholder="Description"></textarea>
            <span class="text-danger mt-2" asp-validation-for="Qty"></span>
            <input class="form-control mt-2" type="number" asp-for="Qty" placeholder="Initial Quantity">
            <span class="text-danger mt-2" asp-validation-for="Price"></span>
            <input class="form-control mt-2" type="decimal" asp-for="Price" placeholder="Price">
            <button type="submit" class="btn btn-info mt-3">Create</button>
        </div>
    </form>
</div>